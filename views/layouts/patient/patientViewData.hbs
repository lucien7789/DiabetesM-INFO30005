<section id="patient-view">
    <section id="patient-view-top-left" class="flex-column">
        <h3>Choose an assigned health measure</h3>
        <select onchange="render()" id="patient-data-dropdown" class="form-box-input data-dropdown">
            {{#each measures}}
            <option value="{{@index}}" data-endpoint="{{this.endpoint}}" data-unit="{{this.unit}}">{{this.name}}</option>
            {{/each}}
        </select>
    </section>

    <section id="patient-view-top-right" class="flex-column">
        <h3>Enter health data</h3>
        <h3 class="disabled">You have already entered data for this measure today</h3>
        <form id="patient-data-input-box" class="form-box flex-row flex-justify-start"  onsubmit="onSubmitPlaceholder(event)">
            <div class="flex-column">
                <input type="number" step=0.1 id="data-input-value" placeholder="0"/>
                <input type="text" id="data-input-comment" placeholder="comment (optional)"/>
            </div>
            <button class="button-standard button-standard-short" type="submit" onclick="onSubmit()">Submit</button>
        </form>
    </section>

    <section id="patient-view-left" class="flex-column">
        <h3 id="data-table-title">Your data history</h3>
        <div id="patient-data-table-container" class="grid-place-center full-width">
            <table id="patient-data-table" class="data-table"></table>
        </div>
    </section>

    <section id = "patient-view-right">

        <h3 id="chart-title" class="grid-place-center">Data Visualization</h3>
        <div id="chart-root"></div>
    </section>

    <section id = "patient-view-tab">

        <button class="tablink" onclick="changeView('patient-view-left', 'patient-view-right')" id="defaultOpen">Table</button>
        <button class="tablink" onclick="changeView('patient-view-right', 'patient-view-left')">Graph</button>

    </section>
</section>

<script>
    function changeView(show, hide) {;

    document.getElementById(hide).style.display = "none";
    document.getElementById(show).style.display = "block";
    document.getElementById(show).style.width = "100%";

    document.getElementById(show).style.gridArea = "display";
    document.getElementById(show).style.alignItems = "center";
    document.getElementById(show).style.justifyItems = "center";
}
</script>

<script src="/scripts/patient/viewmodel.js"></script>
<script src="/scripts/commentPopup.js"></script>